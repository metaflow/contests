  <content><![CDATA[
// straighforward Gaussian elimination O(n^3)
// x + y = a    ->  [[1 1 a],
// 2x + 1y = b  ->   [2 1 b]]
vector<double> solve(vector<vd> m) {
  l n = m.size();
  for (l i = 0; i < n; i++) {
    // find row from i with largest value at i
    l tr = i;
    for (l r = i + 1; r < n; r++) {
      if (m[r][i] > m[tr][i]) tr = r;
    }
    // swap with row i
    swap(m[i], m[tr]);
    // eliminate i from all rows below
    for (l r = i + 1; r < n; r++) {
      for (l c = n; c >= i; c--) {
        m[r][c] -= m[i][c] * m[r][i] / m[i][i]; // be carefull
      }
    }
  }
  vd result(n);
  // restore
  for (l i = n - 1; i >= 0; i--) {
    double t = m[i][n];
    for (l j = i + 1; j < n; j++) t -= m[i][j] * result[j];
    t /= m[i][i]; // be carefull
    result[i] = t;
  }
  return result;
}
]]></content>
